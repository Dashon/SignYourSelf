@model Signyourself2012.Models.Campaign

<h2>
    Create</h2>
@using (Html.BeginForm((string)ViewBag.FormAction, "Campaigns", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>File</legend>
        
        <div>
            <b>Please Choose A Main Immage : </b>
            <input type="file" id="FileUpload1" name="FileUpload1" /><br />
        </div>
     
        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}