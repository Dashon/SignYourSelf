@model Signyourself2012.Models.Campaign
<div class="CampaignCard" id="@Model.CampaignID">
    <h3>
        <a href="~/Campaigns/Details/@Model.CampaignID" style="text-decoration: none;">
    @Html.DisplayFor(model => model.Name)</a>
    </h3>
    <div>
        <a href="~/Campaigns/Details/@Model.CampaignID">
            <img class="p_img" src="@Model.Avatar"
                alt="" width="190" height="150" title="@Html.DisplayFor(model => model.Name)"></a>
    </div>
    <div style="margin: 3px 15px 0px 15px;">
        <small style="text-align: left; font-style: normal; color: #ffa07a; font-weight: normal;
            font-size: 12px;"><span>By :</span> <a href="">
                @Html.DisplayFor(model => model.Creator.UserName)</a></small>
    </div>
    <p style="text-align: left; font-size: 13px; color: #A0A0A0;">
        @Html.DisplayFor(model => model.Intro)
    </p>
    <div id="flag_div">
        <div id="flagsr" style="float: left;">
            <img src="http://spicyfund.com/demo/images2/flag.png" border="0"></div>
        <div id="flag_detailsr">
            <small style="text-align: left; font-style: italic; color: #999999; font-weight: normal;">
                <span style="text-transform: capitalize;"> @Html.DisplayFor(model => model.Location)</span></small>&nbsp;</div>
    </div>
    <div class="progress">
        <div class="progreen" style="width: 0%; max-width: 100%;">
        </div>
    </div>
    <p class="CampaignStats">
        <span class="stleft"> @Model.Goals.Count()
            <br>
            <span class="spanf">Goals</span></span> <span class="stright">@Html.DisplayFor(model => model.EndDate.Subtract(DateTime.Today).TotalDays)
                <br>
                <span class="spanf">DAYS LEFT</span> </span>
    </p>
</div>