<section class="home-block">
    <h2 class="home-block-heading">
        <span>FEATURED USERS</span></h2>
    <div class="one-fourth-thumbs clearfix">
        @{ var db = new Signyourself2012.Models.SignYourselfEntities();
           var fUsers = from fu in db.Ref_FeaturedUsers
                         join u in db.Users on fu.UserID equals u.UserId
                         select u;
           if (fUsers.Any())
           {
               foreach (Signyourself2012.Models.User u in fUsers)
               {
                   
                    Html.RenderPartial("_UserCard",u);
               }
           }
        }
    </div>
    <div class="clearfix">
    </div>
</section>